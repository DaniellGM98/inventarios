			$('#frm-item').on('shown.bs.modal', function () { $('#item-codigo_barras').focus(); });

			$('#btnSave').click(function() {
				$('.invalid-tooltip').remove();
				id = parseInt($('#item-id').val());
				data = { peso_total: $('.tot-dpeso').text() };
				detalles = [];
