	<script type="text/javascript">
		$(function() {
			$apiUrl = '<?= URL_API ?>entrada_produccion/';
			$('#mnu-produ').addClass('show');
			$('#mnu-entp').addClass('active');

			$('#ini, #fin').change(function(){ getItems(); });

