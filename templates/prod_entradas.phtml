				tr.append('<td class="text-center"><small class="nota_entrada">'+item.num_prod+'</small></td>');
				tr.append('<td class="text-right"><small class="peso_total">'+item.peso_total+'</small></td>');

				tda = $('<td class="text-center"></td>').appendTo(tr);
